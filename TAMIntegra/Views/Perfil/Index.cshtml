            let id_perfil = $('#id_perfil_h').val();
            let menu = $('#menu').val();
            let nome = $('#nome').val();
            let situacao = $('#situacao').val();

            if (nome != "")
            {
                $.ajax({
                    url: '@Url.Action("salvarPerfil", "Perfil")',
                    traditional: true,
                    data: { id_perfil: id_perfil, nome: nome, menu : menu, situacao: situacao },
                    contentType: 'json',

                    success: function (response) {
                        if(response != null & response != ""){
                            let mensagem = response[0].Mensagem;
                            if (mensagem != "") {
                                alert(mensagem);
