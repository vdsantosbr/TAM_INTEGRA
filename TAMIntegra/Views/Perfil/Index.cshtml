                                            <tr>
                                                <th style="width:33%">NOME</th>
                                                <th style="width:33%;text-align:center">SITUAÇÃO</th>
                                                <th style="width:33%;text-align:center">PARÂMETROS</th>
                                            </tr>
                                        </thead>
