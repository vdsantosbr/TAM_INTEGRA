@model Entities.UsuarioArea

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TAMAE - TBIP</title>
    
    <script type="text/javascript" src="~/scripts/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/scripts/jquery-ui.js"></script>
    <script type="text/javascript" src="~/scripts/geral.js"></script>
    <script type="text/javascript" src="~/scripts/bootstrap.js"></script>
    <script type="text/javascript" src="~/scripts/bootstrap.min.js"></script>

    <link rel="stylesheet" type="text/css" href="~/Images/jquery-ui.css">
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/menu.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/geral.css" />

    @if (TempData["Mensagem"] != null)
    {
        <script type="text/javascript" charset="utf-8">
        alert("@Html.Raw(@TempData["Mensagem"].ToString())");
        </script>
    }

    @if (TempData["FechaPopUp"] != null)
    {
        <script type="text/javascript">
        window.opener.location.reload();
        window.close();
        </script>
    }

</head>
<body>

    <div class="pop-up-admin">

        <h3>Configurações - Usuários - Áreas</h3>

        @using (Html.BeginForm("Admin", "UsuarioArea", FormMethod.Post))
        {
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)

            <table class="form-padrao">
                <tr>
                    <td>
                        <label class="form-negrito">Nome *</label>
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", autofocus = "autofocus" } })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="form-negrito">Administrativa *</label>
                        @Html.CheckBoxFor(model => model.Administrativa, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label class="form-negrito">Cor</label>
                        @Html.EditorFor(model => model.Cor, new { htmlAttributes = new { @class = "form-control", @id = "Cor" } })
                    </td>
                </tr>
                <tr class="linha-botoes-form">
                    <td colspan="2">
                        <input type="submit" value="Salvar" class="btn btn-secondary" />
                        <input type="reset" value="Limpar" class="btn btn-secondary" />
                        <input type="button" value="Fechar" class="btn btn-secondary" onclick="window.close();" />
                    </td>
                </tr>
            </table>
        }
    </div>

    <script src="~/scripts/spectrum.js"></script>
    <link href="~/Content/spectrum.css" rel="stylesheet" />

    <script>
    $("#Cor").spectrum({
        allowEmpty: true,
        showInput: true,
        //showAlpha: true,
        //hideAfterPaletteSelect: true,
        preferredFormat: "hex",
        showInitial: true,
        chooseText: "Ok",
        cancelText: "Fechar"
    });
    </script>
</body>
</html>